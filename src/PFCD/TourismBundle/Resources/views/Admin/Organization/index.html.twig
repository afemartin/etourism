{% extends 'PFCDTourismBundle:Admin:layout.html.twig' %}

{% block body %}
<h1>Organization list</h1>

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Password</th>
            <th>Salt</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Name</th>
            <th>Acronim</th>
            <th>Shortdesc</th>
            <th>Fulldesc</th>
            <th>Postalcode</th>
            <th>City</th>
            <th>Locale</th>
            <th>Foundationyear</th>
            <th>Geolocation</th>
            <th>Created</th>
            <th>Updated</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_organization_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.username }}</td>
            <td>{{ entity.password }}</td>
            <td>{{ entity.salt }}</td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.phone }}</td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.acronim }}</td>
            <td>{{ entity.shortDesc }}</td>
            <td>{{ entity.fullDesc }}</td>
            <td>{{ entity.postalCode }}</td>
            <td>{{ entity.city }}</td>
            <td>{{ entity.locale }}</td>
            <td>{{ entity.foundationYear }}</td>
            <td>{{ entity.geolocation }}</td>
            <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{{ entity.status }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_organization_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_organization_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_organization_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}