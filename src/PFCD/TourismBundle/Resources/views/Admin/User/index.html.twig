{% extends 'PFCDTourismBundle:Admin:layout.html.twig' %}

{% block body %}
<h1>User list</h1>
<p>In this list there are all the users registered in the system</p>

<table class="table table-bordered table-condensed">
    <thead>
        <tr>
            <th>{{ 'Id'|trans }}</th>
            <th>{{ 'Email'|trans }}</th>
            <th>{{ 'Firstname'|trans }}</th>
            <th>{{ 'Lastname'|trans }}</th>
            <th>{{ 'Birthday'|trans }}</th>
            <th>{{ 'Gender'|trans }}</th>
            <th>{{ 'Country'|trans }}</th>
            <th>{{ 'Locale'|trans }}</th>
            <th>{{ 'Created'|trans }}</th>
            <th>{{ 'Updated'|trans }}</th>
            <th>{{ 'Status'|trans }}</th>
            <th>{{ 'Edit'|trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
    <tr class="status-{{ entity.status }}">
        <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
        <td>{{ entity.email }}</td>
        <td>{{ entity.firstname }}</td>
        <td>{{ entity.lastname }}</td>
        <td>{% if entity.birthday %}{{ entity.birthday|date('Y-m-d') }}{% endif%}</td>
        <td>{{ entity.genderText }}</td>
        <td>{{ entity.country|country }}</td>
        <td>{{ entity.locale|locale }}</td>
        <td>{% if entity.created %}{{ entity.created|date('Y-m-d') }}{% endif%}</td>
        <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d') }}{% endif%}</td>
        <td>{{ entity.statusText }}</td>
        <td><a href="{{ path('admin_user_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a></td>
    </tr>
    {% endfor %}
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('admin_user_new') }}"><i class="icon-plus icon-white"></i> Create a new user</a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('#sidebar-tab-user').addClass("active");
        $('#sidebar-tab-user i').addClass("icon-white");
    </script>
{% endblock %}
