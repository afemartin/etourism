{% extends 'PFCDTourismBundle:Admin:layout.html.twig' %}

{% block body %}
<h1>User list</h1>

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Birthday</th>
            <th>City</th>
            <th>Locale</th>
            <th>Created</th>
            <th>Updated</th>
            <th>Status</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.username }}</td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.firstname }}</td>
            <td>{{ entity.lastname }}</td>
            <td>{% if entity.birthday %}{{ entity.birthday|date('Y-m-d') }}{% endif%}</td>
            <td>{{ entity.city }}</td>
            <td>{{ entity.locale }}</td>
            <td>{% if entity.created %}{{ entity.created|date('Y-m-d') }}{% endif%}</td>
            <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d') }}{% endif%}</td>
            <td>{{ entity.status }}</td>
            <td>
                <a href="{{ path('admin_user_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('admin_user_new') }}"><i class="icon-plus icon-white"></i> Create a new user</a>
{% endblock %}
