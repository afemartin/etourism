{% extends 'PFCDTourismBundle:Admin:layout.html.twig' %}

{% block body %}
<h1>User</h1>
<p>In this list there are detailed information stored about this user</p>

<table class="table table-striped table-bordered table-condensed">
    <tbody>
        <tr>
            <th>{{ 'Id'|trans }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ 'Email'|trans }}</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>{{ 'Firstname'|trans }}</th>
            <td>{{ entity.firstname }}</td>
        </tr>
        <tr>
            <th>{{ 'Lastname'|trans }}</th>
            <td>{{ entity.lastname }}</td>
        </tr>
        <tr>
            <th>{{ 'Birthday'|trans }}</th>
            <td>{{ entity.birthday|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>{{ 'Gender'|trans }}</th>
            <td>{{ entity.genderText }}</td>
        </tr>
        <tr>
            <th>{{ 'Country'|trans }}</th>
            <td>{{ entity.country|country }}</td>
        </tr>
        <tr>
            <th>{{ 'City'|trans }}</th>
            <td>{{ entity.city }}</td>
        </tr>
        <tr>
            <th>{{ 'Address'|trans }}</th>
            <td>{{ entity.address }}</td>
        </tr>
        <tr>
            <th>{{ 'Postalcode'|trans }}</th>
            <td>{{ entity.postalCode }}</td>
        </tr>
        <tr>
            <th>{{ 'Phone'|trans }}</th>
            <td>{{ entity.phone }}</td>
        </tr>
        <tr>
            <th>{{ 'Locale'|trans }}</th>
            <td>{{ entity.locale|locale }}</td>
        </tr>
        <tr>
            <th>{{ 'Created'|trans }}</th>
            <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>{{ 'Updated'|trans }}</th>
            <td>{{ entity.updated|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>{{ 'Status'|trans }}</th>
            <td>{{ entity.statusText }}</td>
        </tr>
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('admin_user_edit', { 'id': entity.id }) }}"><i class="icon-pencil icon-white"></i> {{ 'Edit user'|trans }}</a>
<a class="btn btn-inverse" href="{{ path('admin_user_index') }}"><i class="icon-list-alt icon-white"></i> {{ 'Back to the list'|trans }}</a>
<form class="pull-right" action="{{ path('admin_user_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
    <button class="btn btn-danger" type="submit"><i class="icon-trash icon-white"></i> {{ 'Delete this user'|trans }}</button>
</form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('#sidebar-tab-user').addClass("active");
    </script>
{% endblock %}