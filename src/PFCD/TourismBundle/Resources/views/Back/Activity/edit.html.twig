{% extends 'PFCDTourismBundle:Back:layout.html.twig' %}

{% form_theme edit_form 'PFCDTourismBundle:Form:fields.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/wysihtml5-bootstrap.css') }}" type="text/css" rel="stylesheet"></link>
    {{ parent() }}
{% endblock %}

{% block body %}
<h1>Activity edit</h1>
<p>Use this form to edit the activity information. Activity information should only be changed by the own organization!</p>

<form class="form-horizontal" action="{{ path('back_activity_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <div class="form-actions">
        <button class="btn btn-success" type="submit"><i class="icon-ok icon-white"></i> {{ 'Save changes'|trans }}</button>
        <a class="btn btn-inverse" href="{{ path('back_activity_index') }}"><i class="icon-remove icon-white"></i> {{ 'Cancel changes'|trans }}</a>
    </div>
</form>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/wysihtml5-0.3.0_rc3.min.js') }}"></script>
    {{ parent() }}
    <script src="{{ asset('js/wysihtml5-bootstrap.js') }}"></script>
    <script type="text/javascript">
        $('textarea.wysiwyg').wysihtml5({"stylesheets": ["{{ asset('css/wysihtml5-bootstrap.css') }}"]});
    </script>
    <script type="text/javascript">
        $('#sidebar-tab-activity').addClass("active");
        $('#sidebar-tab-activity i').addClass("icon-white");
    </script>
{% endblock %}