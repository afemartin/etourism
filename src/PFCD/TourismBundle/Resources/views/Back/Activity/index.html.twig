{% extends 'PFCDTourismBundle:Back:layout.html.twig' %}

{% block body %}
<h1>Activity list</h1>
<p>In this list there are all the activities registered in the system</p>

<table class="table table-bordered table-condensed">
    <thead>
        <tr>
            <th>{{ 'Id'|trans }}</th>
            <th>{{ 'Title'|trans }}</th>
            <th>{{ 'Price'|trans }}</th>
            <th>{{ 'Currency'|trans }}</th>
            <th>{{ 'Datestart'|trans }}</th>
            <th>{{ 'Dateend'|trans }}</th>
            <th>{{ 'Timestart'|trans }}</th>
            <th>{{ 'Timeend'|trans }}</th>
            <th>{{ 'Created'|trans }}</th>
            <th>{{ 'Updated'|trans }}</th>
            <th>{{ 'Status'|trans }}</th>
            <th>{{ 'Edit'|trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr class="status-{{ entity.status }}">
            <td><a href="{{ path('back_activity_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.price }}</td>
            <td>{{ entity.currency }}</td>
            <td>{% if entity.dateStart %}{{ entity.dateStart|date('Y-m-d') }}{% endif%}</td>
            <td>{% if entity.dateEnd %}{{ entity.dateEnd|date('Y-m-d') }}{% endif%}</td>
            <td>{% if entity.timeStart %}{{ entity.timeStart|date('H:i') }}{% endif%}</td>
            <td>{% if entity.timeEnd %}{{ entity.timeEnd|date('H:i') }}{% endif%}</td>
            <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{{ entity.statusText }}</td>
            <td><a href="{{ path('back_activity_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('back_activity_new') }}"><i class="icon-plus icon-white"></i> Create a new activity</a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('#sidebar-tab-activity').addClass("active");
        $('#sidebar-tab-activity i').addClass("icon-white");
    </script>
{% endblock %}