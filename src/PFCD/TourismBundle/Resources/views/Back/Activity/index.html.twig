{% extends 'PFCDTourismBundle:Back:layout.html.twig' %}

{% block body %}
<h1>{{ 'back.activity.index.title'|trans }}</h1>
<p>{{ 'back.activity.index.subtitle'|trans }}</p>

<table class="table table-bordered table-condensed">
    <thead>
        <tr>
            <th>{{ 'Id'|trans }}</th>
            <th>{{ 'Title'|trans }}</th>
            <th>{{ 'Price'|trans }}</th>
            <th>{{ 'Currency'|trans }}</th>
            <th>{{ 'Datestart'|trans }}</th>
            <th>{{ 'Dateend'|trans }}</th>
            <th>{{ 'Timestart'|trans }}</th>
            <th>{{ 'Timeend'|trans }}</th>
            <th>{{ 'Created'|trans }}</th>
            <th>{{ 'Updated'|trans }}</th>
            <th>{{ 'Status'|trans }}</th>
            {% if is_granted('ROLE_ADMIN') %}
            <th>{{ 'Organization'|trans }}</th>
            {% endif %}
            <th>{{ 'Edit'|trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% for activity in activities %}
    <tr class="status-{{ activity.status }}">
        <td><a href="{{ path('back_activity_read', { 'id': activity.id }) }}">{{ activity.id }}</a></td>
        <td>{{ activity.title }}</td>
        <td>{{ activity.price }}</td>
        <td>{{ activity.currency }}</td>
        <td>{% if activity.dateStart %}{{ activity.dateStart|date('Y-m-d') }}{% endif%}</td>
        <td>{% if activity.dateEnd %}{{ activity.dateEnd|date('Y-m-d') }}{% endif%}</td>
        <td>{% if activity.timeStart %}{{ activity.timeStart|date('H:i') }}{% endif%}</td>
        <td>{% if activity.timeEnd %}{{ activity.timeEnd|date('H:i') }}{% endif%}</td>
        <td>{% if activity.created %}{{ activity.created|date('Y-m-d') }}{% endif%}</td>
        <td>{% if activity.updated %}{{ activity.updated|date('Y-m-d') }}{% endif%}</td>
        <td>{{ activity.statusText|trans }}</td>
        {% if is_granted('ROLE_ADMIN') %}
        <td><a href="{{ path('back_organization_read', { 'id': activity.organization.id }) }}">{{ activity.organization.name }}</a></td>
        {% endif %}
        <td><a href="{{ path('back_activity_update', { 'id': activity.id }) }}"><i class="icon-edit"></i></a></td>
    </tr>
    {% endfor %}
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('back_activity_create') }}"><i class="icon-plus icon-white"></i> {{ 'back.activity.button.create'|trans }}</a>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script type="text/javascript">
    $('#sidebar-tab-activity').addClass("active");
    $('#sidebar-tab-activity i').addClass("icon-white");
</script>
{% endblock %}