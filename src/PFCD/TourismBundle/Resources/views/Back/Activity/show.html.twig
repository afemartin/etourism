{% extends 'PFCDTourismBundle:Back:layout.html.twig' %}

{% block body %}
<h1>Activity</h1>
<p>In this list there are detailed information stored about this activity</p>

<table class="table table-striped table-bordered table-condensed">
    <tbody>
        <tr>
            <th>{{ 'Id'|trans }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ 'Title'|trans }}</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>{{ 'Shortdesc'|trans }}</th>
            <td>{{ entity.shortDesc }}</td>
        </tr>
        <tr>
            <th>{{ 'Fulldesc'|trans }}</th>
            <td>{{ entity.fullDesc|raw }}</td>
        </tr>
        <tr>
            <th>{{ 'Price'|trans }}</th>
            <td>{{ entity.price }}</td>
        </tr>
        <tr>
            <th>{{ 'Currency'|trans }}</th>
            <td>{{ entity.currency }}</td>
        </tr>
        <tr>
            <th>{{ 'Datestart'|trans }}</th>
            <td>{% if entity.dateStart %}{{ entity.dateStart|date('Y-m-d') }}{% endif%}</td>
        </tr>
        <tr>
            <th>{{ 'Dateend'|trans }}</th>
            <td>{% if entity.dateEnd %}{{ entity.dateEnd|date('Y-m-d') }}{% endif%}</td>
        </tr>
        <tr>
            <th>{{ 'Timestart'|trans }}</th>
            <td>{% if entity.timeStart %}{{ entity.timeStart|date('H:i') }}{% endif%}</td>
        </tr>
        <tr>
            <th>{{ 'Timeend'|trans }}</th>
            <td>{% if entity.timeEnd %}{{ entity.timeEnd|date('H:i') }}{% endif%}</td>
        </tr>
        <tr>
            <th>{{ 'Created'|trans }}</th>
            <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>{{ 'Updated'|trans }}</th>
            <td>{{ entity.updated|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>{{ 'Status'|trans }}</th>
            <td>{{ entity.statusText }}</td>
        </tr>
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('back_activity_edit', { 'id': entity.id }) }}"><i class="icon-pencil icon-white"></i> {{ 'Edit activity'|trans }}</a>
<a class="btn btn-inverse" href="{{ path('back_activity_index') }}"><i class="icon-list-alt icon-white"></i> {{ 'Back to the list'|trans }}</a>
<form class="pull-right" action="{{ path('back_activity_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
    <button class="btn btn-danger" type="submit"><i class="icon-trash icon-white"></i> {{ 'Delete this activity'|trans }}</button>
</form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('#sidebar-tab-activity').addClass("active");
        $('#sidebar-tab-activity i').addClass("icon-white");
    </script>
{% endblock %}