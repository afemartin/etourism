{% extends 'PFCDTourismBundle:Back:layout.html.twig' %}

{% form_theme edit_form 'PFCDTourismBundle:Form:fields.html.twig' %}

{% set sectiontab = 'news' %}{% set helptooltip = 1 %}{% set fileupload = 1 %}{% set wysihtml5 = 1 %}

{% block body %}
<h1>{{ 'back.article.update.title'|trans }}</h1>
<p>{{ 'back.article.update.subtitle'|trans }}</p>

<form class="form-horizontal" action="{{ path('back_article_update', { 'id': article.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <div class="form-actions">
        <button class="btn btn-success" type="submit"><i class="icon-ok icon-white"></i> {{ 'Save changes'|trans }}</button>
        <a class="btn btn-inverse" href="{{ path('back_article_read', { 'id': article.id }) }}"><i class="icon-remove icon-white"></i> {{ 'Cancel changes'|trans }}</a>
    </div>
</form>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script type="text/javascript">
    $('.fileupload').fileuploader();
</script>
{% if article.image %}
<script type="text/javascript">
    $('.fileupload-new img').attr("src", "{{ asset(article.image)}}");
</script>
{% endif %}
{% endblock %}