{% extends 'PFCDTourismBundle:Back:layout.html.twig' %}

{% form_theme form 'PFCDTourismBundle:Form:fields.html.twig' %}

{% block body %}
<h1>{{ 'back.organization.create.title'|trans }}</h1>
<p>{{ 'back.organization.create.subtitle'|trans }}</p>

<form class="form-horizontal" action="{{ path('back_organization_create') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <div class="form-actions">
        <button class="btn btn-success" type="submit"><i class="icon-ok icon-white"></i> {{ 'Create'|trans }}</button>
        <a class="btn btn-inverse" href="{{ path('back_organization_index') }}"><i class="icon-remove icon-white"></i> {{ 'Cancel'|trans }}</a>
    </div>
</form>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script type="text/javascript">
    $('#sidebar-tab-organization').addClass("active");
    $('#sidebar-tab-organization i').addClass("icon-white");
</script>
{% endblock %}