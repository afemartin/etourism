{% extends 'PFCDTourismBundle:Back:layout.html.twig' %}

{% block body %}
<h1>Profile</h1>
<p>In this list there are detailed information stored about your organization</p>

<table class="table table-striped table-bordered table-condensed">
    <tbody>
        <tr>
            <th>{{ 'Username'|trans }}</th>
            <td>{{ entity.username }}</td>
        </tr>
        <tr>
            <th>{{ 'Email'|trans }}</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>{{ 'Phone'|trans }}</th>
            <td>{{ entity.phone }}</td>
        </tr>
        <tr>
            <th>{{ 'Name'|trans }}</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>{{ 'Acronim'|trans }}</th>
            <td>{{ entity.acronim }}</td>
        </tr>
        <tr>
            <th>{{ 'Shortdesc'|trans }}</th>
            <td>{{ entity.shortDesc }}</td>
        </tr>
        <tr>
            <th>{{ 'Fulldesc'|trans }}</th>
            <td>{{ entity.fullDesc }}</td>
        </tr>
        <tr>
            <th>{{ 'Country'|trans }}</th>
            <td>{{ entity.country|country }}</td>
        </tr>
        <tr>
            <th>{{ 'City'|trans }}</th>
            <td>{{ entity.city }}</td>
        </tr>
        <tr>
            <th>{{ 'Address'|trans }}</th>
            <td>{{ entity.address }}</td>
        </tr>
        <tr>
            <th>{{ 'Postalcode'|trans }}</th>
            <td>{{ entity.postalCode }}</td>
        </tr>
        <tr>
            <th>{{ 'Locale'|trans }}</th>
            <td>{{ entity.locale|locale }}</td>
        </tr>
        <tr>
            <th>{{ 'Foundationyear'|trans }}</th>
            <td>{{ entity.foundationYear }}</td>
        </tr>
        <tr>
            <th>{{ 'Created'|trans }}</th>
            <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>{{ 'Updated'|trans }}</th>
            <td>{{ entity.updated|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('back_organization_edit') }}"><i class="icon-pencil icon-white"></i> {{ 'Edit information'|trans }}</a>
{% endblock %}