{% extends 'PFCDTourismBundle:Back:layout.html.twig' %}

{% form_theme edit_form 'PFCDTourismBundle:Form:fields.html.twig' %}

{% block stylesheets %}
<link href="{{ asset('css/wysihtml5-bootstrap.css') }}" type="text/css" rel="stylesheet"></link>
{{ parent() }}
{% endblock %}

{% block body %}
<h1>{{ 'back.resource.update.title'|trans }}</h1>
<p>{{ 'back.resource.update.subtitle'|trans }}</p>

<form class="form-horizontal" action="{{ path('back_resource_update', { 'id': resource.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <div class="form-actions">
        <button class="btn btn-success" type="submit"><i class="icon-ok icon-white"></i> {{ 'Save changes'|trans }}</button>
        <a class="btn btn-inverse" href="{{ path('back_resource_read', { 'id': resource.id }) }}"><i class="icon-remove icon-white"></i> {{ 'Cancel changes'|trans }}</a>
    </div>
</form>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/wysihtml5-0.3.0_rc3.min.js') }}"></script>
{{ parent() }}
<script src="{{ asset('js/wysihtml5-bootstrap.js') }}"></script>
<script type="text/javascript">
    $('textarea.wysiwyg').wysihtml5({"stylesheets": ["{{ asset('css/wysihtml5-bootstrap.css') }}"]});
</script>
<script type="text/javascript">
    $('#sidebar-tab-resource').addClass("active");
    $('#sidebar-tab-resource i').addClass("icon-white");
</script>
{% endblock %}