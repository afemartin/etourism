{% extends 'PFCDTourismBundle:Back:layout.html.twig' %}

{% set sectiontab = 'user' %}{% set helptooltip = 1 %}

{% block body %}
<h1>{{ 'back.user.read.title'|trans }}</h1>
<p>{{ 'back.user.read.subtitle'|trans }}</p>

<table class="table table-striped table-bordered table-condensed">
    <colgroup>
        <col class="first-column">
    </colgroup>
    <tbody>
        <tr>
            <th>{{ 'Id'|trans }}</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>{{ 'Email'|trans }}</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>{{ 'Firstname'|trans }}</th>
            <td>{{ user.firstname }}</td>
        </tr>
        <tr>
            <th>{{ 'Lastname'|trans }}</th>
            <td>{{ user.lastname }}</td>
        </tr>
        <tr>
            <th>{{ 'Birthday'|trans }}</th>
            <td>{% if user.birthday %}{{ user.birthday|date('Y-m-d') }}{% endif %}</td>
        </tr>
        <tr>
            <th>{{ 'Gender'|trans }}</th>
            <td>{% if user.gender %}{{ user.genderText|trans }}{% endif %}</td>
        </tr>
        <tr>
            <th>{{ 'Country'|trans }}</th>
            <td>{{ user.country|country }}</td>
        </tr>
        <tr>
            <th>{{ 'City'|trans }}</th>
            <td>{{ user.city }}</td>
        </tr>
        <tr>
            <th>{{ 'Address'|trans }}</th>
            <td>{{ user.address }}</td>
        </tr>
        <tr>
            <th>{{ 'Postalcode'|trans }}</th>
            <td>{{ user.postalCode }}</td>
        </tr>
        <tr>
            <th>{{ 'Phone'|trans }}</th>
            <td>{{ user.phone }}</td>
        </tr>
        <tr>
            <th>{{ 'Locale'|trans }}</th>
            <td>{{ user.locale|locale }}</td>
        </tr>
        <tr>
            <th>{{ 'Created'|trans }}</th>
            <td>{{ user.created|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>{{ 'Updated'|trans }}</th>
            <td>{{ user.updated|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>{{ 'Status'|trans }}</th>
            <td>{{ user.statusText|trans }} <a data-original-title="{{ 'form.user.field.status.help'|trans }}" rel="tooltip" class="field-help-tooltip"><i class="icon-info-sign"></i></a></td>
        </tr>
    </tbody>
</table>

{% if is_granted('ROLE_ADMIN') %}
<a class="btn btn-primary" href="{{ path('back_user_update', { 'id': user.id }) }}"><i class="icon-pencil icon-white"></i> {{ 'back.user.button.update'|trans }}</a>
{% endif %}
<a class="btn btn-inverse" href="{{ path('back_user_index') }}"><i class="icon-list-alt icon-white"></i> {{ 'back.user.button.index'|trans }}</a>
{% if is_granted('ROLE_ADMIN') %}
<form class="pull-right" action="{{ path('back_user_delete', { 'id': user.id }) }}" method="post">
    {{ form_widget(delete_form) }}
    <button class="btn btn-danger" type="submit"><i class="icon-trash icon-white"></i> {{ 'back.user.button.delete'|trans }}</button>
</form>
{% endif %}
{% endblock %}