{% extends 'PFCDTourismBundle:Front:layout.html.twig' %}

{% block body %}
<h1>Homepage</h1>
<p>These are the most recent and popular activities offered</p>
{% for entity in entities %}
<div class="row organization-container well">
    <div class="span8">
        <h1>{{ entity.title }}</h1>
    </div>
    <div class="span2">
        <a class="thumbnail" href="#"><img alt="" src="http://placehold.it/160x120"></a>
    </div>
    <div class="span6">
        <p>{{ entity.shortDesc }}</p>
        <a class="btn pull-right" href="{{ path('front_activity_show', { 'id': entity.id }) }}"><i class="icon-share-alt"></i> {{ 'Read more'|trans }}</a>
    </div>
</div>
{% endfor %}
{% endblock %}
    
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('#navbar-tab-home').addClass("active");
    </script>
{% endblock %}
