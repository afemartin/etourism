{% extends 'PFCDTourismBundle:Front:layout.html.twig' %}

{% block title %}{{ 'Activity'|trans }} {{ news.title }}{% endblock%}

{% block stylesheets %}
{{ parent() }}
<link href="{{ asset('css/fancybox-1.3.4.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
<div class="info-container row">
    <div class="info-title span9">
        <h1>{{ news.title }}</h1>
    </div>
    <div class="info-desc span9">
        {% if news.video %}
        <div class="info-video pull-right">
            {{ news.video|raw }}
        </div>
        {% endif %}
        <p>{{ news.shortDesc }}</p>
        {{ news.fullDesc|raw }}
    </div>
</div>

{% if news.gallery %}
<h2>{{ 'front.news.read.images'|trans }}</h2>
<div class="info-carrousel row">
    <div class="span9">
        <ul class="thumbnails">
            {% for image in news.gallery %}
            <li class="span">
                <a class="info-image thumbnail" href="{{ asset(image.path) }}" title="{{ image.description }}" rel="images">
                    <img src="{{ image.path|apply_filter('thumbnail_180x120') }}" />
                </a>
            </li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endif %}

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script type="text/javascript">
    $('#navbar-tab-news').addClass("active");
</script>

<script type="text/javascript" src="{{ asset('js/fancybox-1.3.4.min.js') }}"></script>
<script type="text/javascript">
    $("a.info-image").fancybox( { 'titlePosition' : 'over' } );
</script>
{% endblock %}