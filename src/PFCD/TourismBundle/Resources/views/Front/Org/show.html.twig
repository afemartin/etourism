{% extends 'PFCDTourismBundle:Front:layout.html.twig' %}

{% block title %}{{ org.name }}{% endblock %}

{% block body %}
    <article class="org">
        <header>
            <h2>{{ org.name }}</h2>
        </header>
        <img src="{{ asset(['img/organization-', org.username, '.jpg']|join) }}" alt="logo not found" class="large" />
        <div>
            <p>{{ org.shortDesc }}</p>
        </div>
    </article>
{% endblock %}