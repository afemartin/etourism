{% extends 'PFCDTourismBundle:Front:layout.html.twig' %}

{% block body %}
<h1>Organization list</h1>
<p>In this list there are all the organizationes registered in the system</p>

{% for entity in entities %}
<div class="row organization-container well">
    <div class="span8">
        <h1>{{ entity.name }}</h1>
    </div>
    <div class="span2">
        <a class="thumbnail" href="#"><img alt="" src="http://placehold.it/160x120"></a>
    </div>
    <div class="span6">
        <p>{{ entity.shortDesc }}</p>
    </div>
</div>
{% endfor %}
{% endblock%}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('#navbar-tab-organization').addClass("active");
    </script>
{% endblock %}