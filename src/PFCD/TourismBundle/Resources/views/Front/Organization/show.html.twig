{% extends 'PFCDTourismBundle:Front:layout.html.twig' %}

{% block body %}
<h1>Organization</h1>
<p>In this list there are detailed information stored about this organization</p>

<table class="table table-striped table-bordered table-condensed">
    <tbody>
        <tr>
            <th>{{ 'Name'|trans }}</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>{{ 'Acronim'|trans }}</th>
            <td>{{ entity.acronim }}</td>
        </tr>
        <tr>
            <th>{{ 'Shortdesc'|trans }}</th>
            <td>{{ entity.shortDesc }}</td>
        </tr>
        <tr>
            <th>{{ 'Fulldesc'|trans }}</th>
            <td>{{ entity.fullDesc }}</td>
        </tr>
        <tr>
            <th>{{ 'Country'|trans }}</th>
            <td>{{ entity.country|country }}</td>
        </tr>
        <tr>
            <th>{{ 'City'|trans }}</th>
            <td>{{ entity.city }}</td>
        </tr>
        <tr>
            <th>{{ 'Address'|trans }}</th>
            <td>{{ entity.address }}</td>
        </tr>
        <tr>
            <th>{{ 'Postalcode'|trans }}</th>
            <td>{{ entity.postalCode }}</td>
        </tr>
        <tr>
            <th>{{ 'Phone'|trans }}</th>
            <td>{{ entity.phone }}</td>
        </tr>
        <tr>
            <th>{{ 'Foundationyear'|trans }}</th>
            <td>{{ entity.foundationYear }}</td>
        </tr>
    </tbody>
</table>

<a class="btn btn-inverse" href="{{ path('front_organization_index') }}"><i class="icon-list-alt icon-white"></i> {{ 'Back to the list'|trans }}</a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('#navbar-tab-organization').addClass("active");
    </script>
{% endblock %}