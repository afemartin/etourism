{% extends 'PFCDTourismBundle:Front:layout.html.twig' %}

{% block body %}
<h1>{{ 'front.payment.read.title'|trans }}</h1>
<p>{{ 'front.payment.read.subtitle'|trans }}</p>

<table class="table table-condensed">
    <colgroup>
        <col class="first-column">
    </colgroup>
    <tbody>
        <tr>
            <th>{{ 'Organization'|trans }}</th>
            {% if payment.reservation.session.activity.organization.status == 1 or payment.reservation.session.activity.organization.status == 2 %}
            <td><a href="{{ path('front_organization_read', { 'id': payment.reservation.session.activity.organization.id }) }}">{{ payment.reservation.session.activity.organization.name }}</a></td>
            {% else %}
            <td>{{ payment.reservation.session.activity.organization.name }}</td>
            {% endif %}
        </tr>
        <tr>
            <th>{{ 'Activity'|trans }}</th>
            {% if payment.reservation.session.activity.status == 1 or payment.reservation.session.activity.status == 2 %}
            <td><a href="{{ path('front_activity_read', { 'id': payment.reservation.session.activity.id }) }}">{{ payment.reservation.session.activity.title }}</a></td>
            {% else %}
            <td>{{ payment.reservation.session.activity.title }}</td>
            {% endif %}
        </tr>
        <tr>
            <th>{{ 'Persons'|trans }}</th>
            <td>{{ payment.reservation.persons }}</td>
        </tr>
        <tr>
            <th>{{ 'Session date'|trans }}</th>
            <td>{% if payment.reservation.session.date %}{{ payment.reservation.session.date|date('Y-m-d') }}{% endif %}</td>
        </tr>
        <tr>
            <th>{{ 'Session time'|trans }}</th>
            <td>{% if payment.reservation.session.time %}{{ payment.reservation.session.time|date('H:i') }}{% endif %}</td>
        </tr>
        <tr>
            <th>{{ 'Reservation'|trans }}</th>
            <td>{% if payment.reservation %}<a href="{{ path('front_reservation_read', { 'id': payment.reservation.id }) }}"><i class="icon-book"></i></a>{% endif %}</td>
        </tr>
        <tr>
            <th>{{ 'Price'|trans }}</th>
            <td>{{ payment.price|number_format_currency(payment.currency) }}</td>
        </tr>
        <tr>
            <th>{{ 'Type'|trans }}</th>
            <td>{{ payment.typeText|trans }}</td>
        </tr>
        <tr>
            <th>{{ 'Created'|trans }}</th>
            <td>{{ payment.created|date('Y-m-d H:i') }}</td>
        </tr>
        <tr>
            <th>{{ 'Updated'|trans }}</th>
            <td>{{ payment.updated|date('Y-m-d H:i') }}</td>
        </tr>
        <tr>
            <th>{{ 'Status'|trans }}</th>
            <td>{{ payment.statusText|trans }}</td>
        </tr>
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('front_payment_update', { 'id': payment.id }) }}"><i class="icon-pencil icon-white"></i> {{ 'front.payment.button.update'|trans }}</a>
<a class="btn btn-inverse" href="{{ path('front_reservation_index') }}"><i class="icon-list-alt icon-white"></i> {{ 'front.reservation.button.index'|trans }}</a>
{% endblock %}