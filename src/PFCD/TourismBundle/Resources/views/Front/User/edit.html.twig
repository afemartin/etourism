{% extends 'PFCDTourismBundle:Front:layout.html.twig' %}

{% form_theme edit_form 'PFCDTourismBundle:Other:customFields.html.twig' %}

{% block title %}Edit Profile{% endblock%}

{% block body %}
<h1>User profile edit</h1>
<p>Use this form to edit your account information</p>

<form class="form-horizontal" action="{{ path('front_user_update') }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <div class="form-actions">
        <button class="btn btn-success" type="submit"><i class="icon-ok icon-white"></i> {{ 'Save changes'|trans }}</button>
        <a class="btn btn-inverse" href="{{ path('front_user_show', { 'id': entity.id }) }}"><i class="icon-remove icon-white"></i> {{ 'Cancel changes'|trans }}</a>
    </div>
</form>
{% endblock %}
