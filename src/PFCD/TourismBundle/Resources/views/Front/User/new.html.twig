{% extends 'PFCDTourismBundle:Front:layout.html.twig' %}

{% form_theme form 'PFCDTourismBundle:Other:customFields.html.twig' %}

{% block title %}Registration{% endblock%}

{% block body %}
    <header>
        <h1>User registration</h1>
    </header>

    <p>Please fill the following information to complete the registration</p>

    {% if app.session.hasFlash('alert-success') %}
        <div class="alert alert-success">
            <button class="close" data-dismiss="alert">Ã—</button>
            {{ app.session.flash('alert-success') }}
        </div>
    {% endif %}

    <form class="form-horizontal" action="{{ path('front_user_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <div class="form-actions">
            <button class="btn btn-primary" type="submit"><i class="icon-globe icon-white"></i> Register</button>
        </div>
    </form>
{% endblock %}
