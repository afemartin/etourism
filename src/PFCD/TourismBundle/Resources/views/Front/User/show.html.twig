{% extends 'PFCDTourismBundle:Front:layout.html.twig' %}

{% block title %}{{ entity.fullname }}'s Profile{% endblock%}

{% block body %}
    {% if app.user and app.user.id == entity.id %}
    <h1>My Profile</h1>
    {% else %}
    <h1>{{ entity.fullname }}'s Profile</h1>
    {% endif %}
       
    <table class="table table-striped table-bordered table-condensed">
        <tbody>
            {# Public profile info #}
            <tr>
                <th>Firstname</th>
                <td>{{ entity.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ entity.lastname }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ entity.birthday|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ entity.gender }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
            </tr>
            {# Private profile info #}
            {% if app.user and app.user.id == entity.id %}
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ entity.country|country }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ entity.city }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ entity.address }}</td>
            </tr>
            <tr>
                <th>Postalcode</th>
                <td>{{ entity.postalCode }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ entity.phone }}</td>
            </tr>
            <tr>
                <th>Locale</th>
                <td>{{ entity.locale|locale }}</td>
            </tr>
            {% endif %}
        </tbody>
    </table>

    {% if app.user and app.user.id == entity.id %}
    <a class="btn btn-primary" href="{{ path('front_user_edit') }}"><i class="icon-pencil icon-white"></i> {{ 'Edit information'|trans }}</a>
    <a class="btn btn-inverse" href="{{ path('front_index') }}"><i class="icon-list-alt icon-white"></i> {{ 'Back to the homepage'|trans }}</a>
    <form class="pull-right" action="{{ path('front_user_delete') }}" method="post">
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit"><i class="icon-trash icon-white"></i> {{ 'Delete my account'|trans }}</button>
    </form>
    {% endif %}
{% endblock %}