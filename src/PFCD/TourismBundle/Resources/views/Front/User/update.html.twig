{% extends 'PFCDTourismBundle:Front:layout.html.twig' %}

{% form_theme edit_form 'PFCDTourismBundle:Form:fields.html.twig' %}

{% block title %}{{ 'Edit profile'|trans }}{% endblock%}

{% block body %}
<h1>{{ 'front.user.update.title'|trans }}</h1>
<p>{{ 'front.user.update.subtitle'|trans }}</p>

<form class="form-horizontal" action="{{ path('front_user_update') }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <div class="form-actions">
        <button class="btn btn-success" type="submit"><i class="icon-ok icon-white"></i> {{ 'Save changes'|trans }}</button>
        <a class="btn btn-inverse" href="{{ path('front_user_read', { 'id': user.id }) }}"><i class="icon-remove icon-white"></i> {{ 'Cancel changes'|trans }}</a>
        <span class='field-required-desc'>*</span> <b>{{ 'form.field.required.help'|trans }}</b>
    </div>
</form>
{% endblock %}
